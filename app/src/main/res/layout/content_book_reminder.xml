<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mateus.jera.reminder_book.BookReminderActivity"
    tools:showIn="@layout/activity_book_reminder">


    <DatePicker
        android:id="@+id/book_reminder_date"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:datePickerMode="spinner"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="212dp"/>

    <TimePicker
        android:id="@+id/book_reminder_time"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_reminder_date"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="0dp"/>


</RelativeLayout>
